{
	"compilerOptions": {
		"target": "es5",

		"module": "es6",
		"moduleResolution": "node",

		"declaration": false,
		"noEmitHelpers": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"lib": [ "es6", "dom" ],

		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,

		"allowUnreachableCode": false,
		"noUnusedParameters": true,
		"noUnusedLocals": true,

		"sourceMap": true
	},

	"exclude": [
		"node_modules"
	]
}
